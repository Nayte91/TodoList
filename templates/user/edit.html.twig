{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Modifier <strong>{{ user.username }}</strong></h1>
{% endblock %}

{% block header_img %}
    <img class="slide-image" src="{{ asset('assets/img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
    <div class="row">
        {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
